{
    "env":{
       "es2021":true,
       "node":true,
       "jest": true
    },
    "extends":[
       "standard",
       "eslint:recommended"
    ],
    "parserOptions":{
       "ecmaVersion":"latest",
       "sourceType":"module"
    },
    "rules":{
       "indent":[
          "error",
          2
       ],
       "linebreak-style":[
          "error",
          "unix"
       ],
       "quotes":[
          "error",
          "single"
       ],
       "semi":[
          "error",
          "never"
       ],
       "no-tabs":0
    }
 }